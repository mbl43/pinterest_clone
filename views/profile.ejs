<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>
  <body>
    <% include partials/navbar %>
    <div class="main">
      <section class="profile-card">
        <div class="image">
          <img
            src="https://preview.keenthemes.com/metronic-v4/theme_rtl/assets/pages/media/profile/profile_user.jpg"
            alt="user image"
          />
        </div>
        <div class="text-data">
          <h2><%= Users.username %></h2>
          <h2><%= Users.fullName %></h2>
          <p>Developer</p>
        </div>
        <form   action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="caption" placeholder="Enter caption for image"/>
          <input type="file" name="file" />
          <button type="submit" value="Upload Image">Upload</button>
        </form>
        <div class="buttons">
          <a href="/logout" class="button">Logout</a>
        </div>
      </section>
    </div>

    <div class="card-container">
      <div class="cardsec">
         
        <% Users.posts.forEach(function(post) { %> 
          <div class="card">
            <img
              src="/images/uploads/<%= post.image %>"
              alt="Card Image"
            />
            <h2><%= post.imagetext %></h2>
          </div>
        <% }) %>
         
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
